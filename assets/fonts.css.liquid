/* Heading font - Bold (700) */
@font-face {
    font-family: 'Doran';
    src: url('{{ "Doran-Bold.woff2" | asset_url }}') format('woff2'),
         url('{{ "Doran-Bold.woff" | asset_url }}') format('woff');
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }
  
  
  /* Body font - Regular (400) */
  @font-face {
    font-family: 'IBMPlexSansArabic';
    src: url('{{ "IBMPlexSansArabic-Regular.ttf" | asset_url }}') format('truetype');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }
  
  /* Body font - Semibold (600) */
  @font-face {
    font-family: 'IBMPlexSansArabic-SemiBold';
    src: url('{{ "IBMPlexSansArabic-SemiBold.ttf" | asset_url }}') format('truetype');
    font-weight: 600;
    font-style: normal;
    font-display: swap;
  }
  
  /* Body font - Bold (700) */
  @font-face {
    font-family: 'IBMPlexSansArabic-Bold';
    src: url('{{ "IBMPlexSansArabic-Bold.ttf" | asset_url }}') format('truetype');
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }
  