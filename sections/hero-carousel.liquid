{{ 'section-hero-carousel.css' | asset_url | stylesheet_tag }}
<script src="{{ 'hero-carousel.js' | asset_url }}" defer></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .hero-carousel__hero--{{ section.id }} .hero-carousel__media::after {
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  }
{%- endstyle -%}

<div class="hero-carousel color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding isolate">
  <!-- Hero Section - Full Width -->
  <div class="hero-carousel__hero hero-carousel__hero--{{ section.id }}">
    {%- if section.settings.hero_image != blank -%}
      <div class="hero-carousel__media">
        {{
          section.settings.hero_image
          | image_url: width: 2000
          | image_tag: loading: 'lazy', class: 'hero-carousel__image'
        }}

        <!-- Hero Navigation Arrows - Control Cards -->
        <div class="hero-carousel__hero-navigation">
          <button
            type="button"
            class="hero-carousel__nav-button hero-carousel__nav-button--prev"
            aria-label="{{ 'general.slider.previous_slide' | t }}"
            data-carousel-prev
          >
            <span class="svg-wrapper">{{ 'icon-arrow.svg' | inline_asset_content }}</span>
          </button>
          <button
            type="button"
            class="hero-carousel__nav-button hero-carousel__nav-button--next"
            aria-label="{{ 'general.slider.next_slide' | t }}"
            data-carousel-next
          >
            <span class="svg-wrapper">{{ 'icon-arrow.svg' | inline_asset_content }}</span>
          </button>
        </div>
      </div>
    {%- endif -%}

    <div class="hero-carousel__content hero-carousel__content--{{ section.settings.text_alignment }}">
      {%- if section.settings.heading != blank -%}
        <h1
          class="hero-carousel__heading {{ section.settings.heading_size }}"
          style="color: {{ section.settings.heading_color | default: '#ffffff' }};"
        >
          {{ section.settings.heading }}
        </h1>
      {%- endif -%}
      {%- if section.settings.description != blank -%}
        <div
          class="hero-carousel__description rte"
          style="color: {{ section.settings.description_color | default: '#ffffff' }};"
        >
          {{ section.settings.description }}
        </div>
      {%- endif -%}
    </div>
  </div>

  <!-- Cards Carousel Section - Full Width Track with Page-Width Start -->
  <div class="hero-carousel__cards-section">
    <div class="hero-carousel__cards-container">
      <div class="hero-carousel__cards-wrapper" id="CardsCarousel-{{ section.id }}">
        <div class="hero-carousel__cards-track">
            {%- if section.blocks.size > 0 -%}
              {%- for block in section.blocks -%}
                <div
                  class="hero-carousel__card"
                  {{ block.shopify_attributes }}
                >
                  <div class="hero-carousel__card-media">
                    {%- if block.settings.image != blank -%}
                      {{
                        block.settings.image
                        | image_url: width: 800
                        | image_tag: loading: 'lazy', class: 'hero-carousel__card-image'
                      }}
                    {%- else -%}
                      <div class="hero-carousel__card-placeholder">
                        <span>No Image</span>
                      </div>
                    {%- endif -%}
                  </div>

                  <div class="hero-carousel__card-content">
                    {%- if block.settings.title != blank -%}
                      <h3
                        class="hero-carousel__card-title"
                        style="color: {{ block.settings.title_color | default: '#000000' }};"
                      >
                        {{ block.settings.title }}
                      </h3>
                    {%- else -%}
                      <h3 class="hero-carousel__card-title" style="color: #000000;">Card {{ forloop.index }}</h3>
                    {%- endif -%}
                    {%- if block.settings.description != blank -%}
                      <div
                        class="hero-carousel__card-description rte"
                        style="color: {{ block.settings.description_color | default: '#666666' }};"
                      >
                        {{ block.settings.description }}
                      </div>
                    {%- else -%}
                      <div class="hero-carousel__card-description rte" style="color: #666666;">
                        This is a sample card description. Add your content here.
                      </div>
                    {%- endif -%}
                  </div>
                </div>
              {%- endfor -%}
            {%- else -%}
              <!-- Default cards when no blocks are added -->
              <div class="hero-carousel__card">
                <div class="hero-carousel__card-media">
                  <div class="hero-carousel__card-placeholder">
                    <span>Sample Card 1</span>
                  </div>
                </div>
                <div class="hero-carousel__card-content">
                  <h3 class="hero-carousel__card-title">Sample Card 1</h3>
                  <div class="hero-carousel__card-description">
                    This is a sample card. Add your content in the theme editor.
                  </div>
                </div>
              </div>
              <div class="hero-carousel__card">
                <div class="hero-carousel__card-media">
                  <div class="hero-carousel__card-placeholder">
                    <span>Sample Card 2</span>
                  </div>
                </div>
                <div class="hero-carousel__card-content">
                  <h3 class="hero-carousel__card-title">Sample Card 2</h3>
                  <div class="hero-carousel__card-description">
                    This is a sample card. Add your content in the theme editor.
                  </div>
                </div>
              </div>
              <div class="hero-carousel__card">
                <div class="hero-carousel__card-media">
                  <div class="hero-carousel__card-placeholder">
                    <span>Sample Card 3</span>
                  </div>
                </div>
                <div class="hero-carousel__card-content">
                  <h3 class="hero-carousel__card-title">Sample Card 3</h3>
                  <div class="hero-carousel__card-description">
                    This is a sample card. Add your content in the theme editor.
                  </div>
                </div>
              </div>
              <div class="hero-carousel__card">
                <div class="hero-carousel__card-media">
                  <div class="hero-carousel__card-placeholder">
                    <span>Sample Card 4</span>
                  </div>
                </div>
                <div class="hero-carousel__card-content">
                  <h3 class="hero-carousel__card-title">Sample Card 4</h3>
                  <div class="hero-carousel__card-description">
                    This is a sample card. Add your content in the theme editor.
                  </div>
                </div>
              </div>
              <div class="hero-carousel__card">
                <div class="hero-carousel__card-media">
                  <div class="hero-carousel__card-placeholder">
                    <span>Sample Card 5</span>
                  </div>
                </div>
                <div class="hero-carousel__card-content">
                  <h3 class="hero-carousel__card-title">Sample Card 5</h3>
                  <div class="hero-carousel__card-description">
                    This is a sample card. Add your content in the theme editor.
                  </div>
                </div>
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero with Cards Carousel",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Hero Section"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
