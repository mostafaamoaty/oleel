{{ 'section-page-intro.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .page-intro__banner--{{ section.id }}::after {
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
-%}

<div class="page-intro section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <div class="page-intro__container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      {%- if section.settings.heading != blank -%}
        <div class="page-intro__heading-wrapper page-intro__heading-wrapper--{{ section.settings.heading_alignment }}">
          <h1
            class="page-intro__heading {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade style="--animation-order: 1;"
            {% endif %}
          >
            {{ section.settings.heading }}
          </h1>
        </div>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <div class="page-intro__description-wrapper page-intro__description-wrapper--{{ section.settings.description_alignment }}">
          <div
            class="page-intro__description rte {{ section.settings.description_style }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade style="--animation-order: 2;"
            {% endif %}
          >
            {{ section.settings.description }}
          </div>
        </div>
      {%- endif -%}

      {%- if section.settings.banner_image != blank -%}
        <div
          class="page-intro__banner-wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade style="--animation-order: 3;"
          {% endif %}
        >
          <div
            class="page-intro__banner page-intro__banner--{{ section.id }} media{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if section.settings.image_height == 'adapt' and section.settings.banner_image != blank %} page-intro__banner--adapt{% endif %}{% if section.settings.image_height != 'adapt' %} page-intro__banner--{{ section.settings.image_height }}{% endif %}"
            {% if section.settings.image_height == 'adapt' and section.settings.banner_image != blank %}
              style="padding-bottom: {{ 1 | divided_by: section.settings.banner_image.aspect_ratio | times: 100 }}%;"
            {% endif %}
          >
            {%- liquid
              assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
              assign sizes = '(min-width: 750px) 100vw, 100vw'
              assign image_height = section.settings.banner_image.width | divided_by: section.settings.banner_image.aspect_ratio
            -%}
            {{
              section.settings.banner_image
              | image_url: width: 3840
              | image_tag:
                width: section.settings.banner_image.width,
                height: image_height,
                sizes: sizes,
                widths: widths,
                fetchpriority: fetch_priority
            }}
          </div>
        </div>
      {%- else -%}
        <div
          class="page-intro__banner-wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade style="--animation-order: 3;"
          {% endif %}
        >
          <div class="page-intro__banner media placeholder">
            {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        </div>
      {%- endif -%}

      {%- if section.settings.secondary_description != blank -%}
        <div class="page-intro__secondary-description-wrapper page-intro__secondary-description-wrapper--{{ section.settings.secondary_description_alignment }}">
          <div
            class="page-intro__secondary-description rte {{ section.settings.secondary_description_style }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade style="--animation-order: 4;"
            {% endif %}
          >
            {{ section.settings.secondary_description }}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

