                {%- endif -%}

                <img
                  src="{{ block.settings.logo | image_url: width: 200 }}"
                  alt="{{ block.settings.logo.alt | default: block.settings.logo_name | escape }}"
                  class="logos-marquee__image"
                  width="{{ section.settings.logo_width | default: 120 }}"
                  height="auto"
                  loading="lazy"
