{{ 'section-logos-marquee.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .logos-marquee[data-section-id="{{ section.id }}"] {
    --logo-spacing: {{ section.settings.logo_spacing | default: 32 }}px;
    --marquee-speed: {{ section.settings.marquee_speed | default: 50 }}s;
    --marquee-direction: {{ section.settings.marquee_direction | default: 'left' }};
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .logos-marquee[data-section-id="{{ section.id }}"] .logos-marquee__content {
    gap: var(--logo-spacing) !important;
  }

  .logos-marquee[data-section-id="{{ section.id }}"] .logos-marquee__track {
    animation-duration: var(--marquee-speed) !important;
  }

  .logos-marquee[data-section-id="{{ section.id }}"] .logos-marquee__track[data-direction="left"] {
    animation: marquee-left var(--marquee-speed) linear infinite !important;
  }

  .logos-marquee[data-section-id="{{ section.id }}"] .logos-marquee__track[data-direction="right"] {
    animation: marquee-right var(--marquee-speed) linear infinite !important;
  }

  /* RTL Support for section-specific animations */
  [dir="rtl"] .logos-marquee[data-section-id="{{ section.id }}"] .logos-marquee__content {
    direction: ltr !important; /* Force LTR to prevent logo order reversal */
  }

  [dir="rtl"] .logos-marquee[data-section-id="{{ section.id }}"] .logos-marquee__track {
    animation: marquee-right var(--marquee-speed) linear infinite !important;
  }

  [dir="rtl"] .logos-marquee[data-section-id="{{ section.id }}"] .logos-marquee__track[data-direction="left"] {
    animation: marquee-left var(--marquee-speed) linear infinite !important;
  }

  [dir="rtl"] .logos-marquee[data-section-id="{{ section.id }}"] .logos-marquee__track[data-direction="right"] {
    animation: marquee-right var(--marquee-speed) linear infinite !important;
  }

  /* Hover pause for section-specific animations */
  .logos-marquee[data-section-id="{{ section.id }}"] .logos-marquee__track:hover {
    animation-play-state: paused !important;
  }

  .logos-marquee[data-section-id="{{ section.id }}"] .logos-marquee__item:hover {
    animation-play-state: paused !important;
  }

  .logos-marquee[data-section-id="{{ section.id }}"] .logos-marquee__container:hover .logos-marquee__track {
    animation-play-state: paused !important;
  }

  @media screen and (min-width: 750px) {
    .logos-marquee[data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  class="logos-marquee section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient"
  data-section-id="{{ section.id }}"
  data-logo-spacing="{{ section.settings.logo_spacing | default: 32 }}"
>
  {%- if section.settings.heading != blank -%}
    <div class="page-width">
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
      </div>
    </div>
  {%- endif -%}

  {%- if section.blocks.size > 0 -%}
    <div class="logos-marquee__container">
      <div
        class="logos-marquee__track"
        data-speed="{{ section.settings.marquee_speed | default: 50 }}"
        data-direction="{{ section.settings.marquee_direction | default: 'left' }}"
      >
        <div class="logos-marquee__content">
